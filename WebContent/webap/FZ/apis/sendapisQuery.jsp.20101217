<script language="Javascript" src="calendar/FieldTools.js"></script>
<SCRIPT LANGUAGE="JavaScript">
function load()
{	
	/*
    today=new Date();
	var y, m, d;
	y = today.getFullYear() ;
	m = today.getMonth()+1;
	d = today.getDate(); 
		 
	strDate = Date.parse(y+"/"+m+"/"+d);

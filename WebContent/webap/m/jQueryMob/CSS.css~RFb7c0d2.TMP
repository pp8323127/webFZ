body{
	font-family: 'Microsoft JhengHei', Helvtica;
	font-weight: normal;
	width: 100%;
}

.ui-content{
	width: 100%;
	padding: 0;
}

/* 選班頁面 */
#sel-main{
	background-image: url("/images/login_bg_iPhone5.jpg");
	background-size: cover;
}
#sel-main-content{
	margin-top: 30px;
	/*margin-left: 35px;*/
}
div#sel-main-content:first-child p{
	font-size:25px;
	color: #fff;
	margin-left: 35px;
}
div#sel-main-content a{
	background: none;
	border: none;
	color: #fff;
	font-size: 18px;
	line-height: 30px;
	text-align: left;
	padding-left: 35px;
}

table th{
	background: #e4e4e4;
	text-align: left;
	padding-left: 35px;
	font-size: 18px;
}

/* headerBar*/
#header-bar{
	width: 100%;
	height: 50px;
	background: #fff;
}
#header-bar-btnBak{
	padding-left: 25px;
	width: 20%;
}
#header-bar-btnAppname{
	width: 60%;
	text-align: center;
	font-size: 18px;
	font-weight: bold;
}
#header-bar-btnNavi{
	width: 20%;
	text-align: right;
	padding-right: 25px;
}

/* 超連結 */
/* 未連結 */
a:link{
    color: #FFFFFF;
    text-decoration: none;
}
/* 已連結過 */
a:visited{
    color: #FFFFFF;
    text-decoration: none;
}
/* 滑鼠移至連結 */
a:hover{
    color: #FFFFFF;
    text-decoration: none;
}
/* 選擇的連結 */
a:active{
    color: #FFFFFF;
    text-decoration: none;
}


/******************
 * icon *
 ******************/
.ui-icon-btnNavi:after{
	background-image: url("/images/navi_icon_menu.png");
}
.ui-icon-btnArrow_right:after{
	background-image: url("/images/menu_btn_arrow_right_white.png");
}
